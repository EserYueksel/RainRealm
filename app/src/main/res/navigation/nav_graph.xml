<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/home"
        android:name="com.yueksel.rainrealm.ui.HomeFragment"
        android:label="RainRealm"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/settings"
        android:name="com.yueksel.rainrealm.ui.SettingsFragment"
        android:label="RainRealm - Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/splash"
        android:name="com.yueksel.rainrealm.ui.SplashFragment"
        android:label="RainRealm"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/preferences"
        android:name="com.yueksel.rainrealm.ui.PreferenceFragment"
        android:label="RainRealm - Preferences"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/feedback"
        android:name="com.yueksel.rainrealm.ui.FeedbackFragment"
        android:label="RainRealm - Feedback"
        tools:layout="@layout/fragment_feedback" />
    <fragment
        android:id="@+id/overview"
        android:name="com.yueksel.rainrealm.ui.OverviewFragment"
        android:label="RainRealm - Overview"
        tools:layout="@layout/fragment_overview" />
</navigation>